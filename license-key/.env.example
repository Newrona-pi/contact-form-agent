# Database connection string
DATABASE_URL="file:./dev.db"

# Secret for signing JWT tokens
JWT_SECRET="your-secret-key"

# Token required to call admin APIs
ADMIN_TOKEN="set-admin-token"

# SMTP settings (leave empty to disable mail)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="username"
SMTP_PASS="password"
SMTP_FROM="noreply@example.com"

# Application metadata used in emails
APP_NAME="My App"
APP_BASE_URL="http://localhost:3000"

# Optional: base URL used by server actions when calling internal API
NEXT_PUBLIC_APP_URL="http://localhost:3000"
